<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chat_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="2dp"/>

    <TextView
        android:id="@+id/chat_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="2dp"/>

    <ImageView
        android:id="@+id/chat_message_image"
        android:layout_width="8pt"
        android:layout_height="8pt"
        android:layout_marginStart="5dp"
        android:paddingTop="2dp"
        android:layout_toEndOf="@id/chat_sender"/>

    <TextView
        android:id="@+id/chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_sender"
        android:paddingBottom="4dp"/>

</RelativeLayout>