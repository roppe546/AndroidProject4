<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:focusableInTouchMode="true"
    tools:context=".view.ChatActivity">

    <ListView
        android:id="@+id/history_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top"
        android:layout_above="@+id/message_area" />

    <RelativeLayout
        android:id="@+id/message_area"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false">

        <EditText
            android:id="@+id/textfield"
            android:hint="@string/chat_message_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/gallery_button_add_attachment" />


        <ImageButton
            android:id="@+id/gallery_button_add_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_toStartOf="@+id/send_button"
            android:layout_alignBottom="@+id/textfield"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:id="@+id/gallery_button_delete_attachment"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_delete"
            android:layout_toStartOf="@+id/send_button"
            android:layout_alignBottom="@+id/textfield"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/send_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_send_button_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/gallery_button_add_attachment" />

    </RelativeLayout>

</RelativeLayout>
