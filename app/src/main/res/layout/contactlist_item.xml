<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="24pt">

    <ImageView
        android:id="@+id/contactlist_item_profile_picture"
        android:layout_width="24pt"
        android:layout_height="24pt"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="2pt"/>

    <TextView
        android:id="@+id/contactlist_item_username"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contactlist_item_profile_picture"/>

    <TextView
        android:id="@+id/contactlist_item_last_message_received_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="3dp"/>

</RelativeLayout>